          <tr>
            <th>日付</th>
            <th>予約開始時間</th>
            <th>ユーザー名</th>
          </tr>
        </thead>
        <tbody>
          <% future_reservations(@reservations).each do |reservation| %>
            <tr>
              <td><%= reservation.day.strftime("%m月%d日") %></td>
              <td><%= reservation.start_time.strftime("%H:%M") %></td>
              <td><%= reservation.user.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>