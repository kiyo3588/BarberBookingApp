<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <h1>今日の予約</h1>
    </div>

    <div class="col-12 mt-3">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>日付</th>
            <th>予約開始時間</th>
            <th>ユーザー名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% today_reservations(@reservations).each do |reservation| %>
            <tr>
              <td><%= reservation.day.strftime("%m月%d日") %></td>
              <td><%= reservation.start_time.strftime("%H:%M") %></td>
              <td><%= reservation.user.name %></td>
              <% if reservation.visited? %>
                <td><%= "来店済" %></td>
              <% else %>
                <td><%= button_to "来店", { action: :create_visit_history, id: reservation.id }, method: :post, class: "btn btn-primary" %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <h1>明日以降の予約</h1>
    </div>

    <div class="col-12 mt-3">
