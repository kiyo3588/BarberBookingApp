<div class="container">
  <div class="row">
    <div class="col-12 text-center title">
      <h1>新規予約作成</h1>
    </div>
    <div class="col-12 mt-3 content">
      <%= form_with(model: @reservation, url: reservations_path, local: true) do |form| %>

        <div class="day form-group">
          <%= form.label :day, '日付' %>
          <% if @day.present? %>
            <%= form.text_field :day, class: 'form-control', value: @day.strftime('%m月%d日'), readonly: true %>
          <% else %>
            <%= form.text_field :day, class: 'form-control', readonly: true %>
          <% end %>
        </div>

        <div class="time form-group">
          <%= form.label :time, '時間' %>
          <% if @time.present? %>
            <%= form.text_field :time, class: 'form-control', value: @time.strftime('%H:%M'), readonly: true %>
          <% else %>
            <%= form.text_field :time, class: 'form-control', readonly: true %>
          <% end %>
        </div>
        <%= hidden_field_tag :user_id, current_user.id %>

        <div class="submit">
          <%= form.submit value: '予約する', class: 'btn btn-primary mx-auto d-block' %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>