<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <h1>予約画面</h1>
      <p>3ヶ月先まで予約することができます。</p>
    </div>
    <div class="col-12 mt-3">
      <%= week_calendar events: @reservations do |date, reservations| %>
        <%= date.day %>
        <% reservations.each do |reservation| %>
          <!-- 予約の詳細を表示 -->
        <% end %>
      <% end %>
    </div>
  </div>
</div>